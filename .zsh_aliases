# tree: quickly print the folder structure at different levels
alias tree='tree -AC --dirsfirst'
alias tree1='tree -L 1'
alias tree2='tree -L 2'
alias tree3='tree -L 3'
alias tree4='tree -L 4'

# grep: line numbers (-n), ignore case (-i), colors
alias grep='grep --color'

# ls: default list
case $(uname) in
    'Linux')
        alias ls='ls -lAh --color=auto --group-directories-first'
        ;;
    'Darwin')
        # use `gls` if available from brew coreutils (dircolors display properly)
        if command -v gls >/dev/null 2>&1; then
            alias ls='gls -lAh --color=auto --group-directories-first'
        # use mac os `ls` (dircolors will not display properly)
        else
            alias ls='ls -lAhG'
        fi
        ;;
esac

# cp: use rsync with progress bar, "cpv" means "cp verbose"
alias cpv='rsync -a --progress -h'      # [-a] archive, keep file permissions
alias cpvv='rsync -av --progress -h'    # [-v] increase verbosity
alias cpvz='rsync -avz --progress -h'   # [-z] compress file during transfer
alias cp2nas='rsync -vz --progress -h'

# cat: default print to std output
alias cat='cat -ns'

# less: show colors
alias less='less -R'

# cd: quickly navigate upwards in directories
alias ~='cd ~'
alias /='cd /'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# homebrew
if [ $(uname -s) = 'Darwin' ] && command -v brew >/dev/null 2>&1; then
    alias brewup='brew update && brew upgrade && brew cleanup -s && brew doctor'
fi

# lazygit
if command -v lazygit >/dev/null 2>&1; then
    alias lg='lazygit'
fi

# kubectl
if command -v kubectl >/dev/null 2>&1; then
    alias k='kubectl'
fi

# open nautilus in current dir, redirect output
if command -v nautilus >/dev/null 2>&1; then
    gnaut() {
        nohup nautilus -w "$1" >/dev/null &
    }
fi

# unset all proxies
alias unset-proxy='unset http_proxy https_proxy HTTP_PROXY HTTPS_PROXY'
alias c4vpn='unset-proxy && pritunl-client-electron </dev/null &> /dev/null &'
